<Application x:Class="MyDictionary.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml"
             DispatcherUnhandledException="Application_DispatcherUnhandledException"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MyDictionary;component/ImageButton/ButtonStyles.xaml" />
                <ResourceDictionary Source="/MyDictionary;component/FadingBorder/ThemeLarge.xaml" />
                <ResourceDictionary Source="/MyDictionary;component/FadingBorder/ThemeSmall.xaml" />
                <ResourceDictionary Source="/MyDictionary;component/MoButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Main Screen Drop Shadow Effect -->
            <DropShadowEffect Color="DarkSlateGray"
                        x:Key="mainDropShadow"
                        ShadowDepth="8" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
